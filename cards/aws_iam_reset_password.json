{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Are you sure you want to reset your keys? Any active keys will be deleted and you will receive a new access key pair.",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "id": "KeyId",
            "text": {{key_choices}},
            "wrap": true
        },
        {
            "type": "Input.ChoiceSet",
            "id": "ChoiceId",
            "style": "expanded",
            "choices": [
                {
                    "title": "Yes",
                    "value": "Yes"
                },
                {
                    "title": "No",
                    "value": "No"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "id": "cancel",
            "title": "Cancel",
            "data": {
                "isSubmit": false,
                "card_feature_index": "reset_aws_iam_password"
            }
        },
        {
            "type": "Action.Submit",
            "id": "submit",
            "title": "Submit",
            "data": {
                "isSubmit": true,
                "card_feature_index": "reset_aws_iam_password",
                "username": {{username}}
            }
        }
    ]
}
