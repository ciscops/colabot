[{"contentType":
  "application/vnd.microsoft.card.adaptive",
  "content":
  {
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "RichTextBlock",
            "spacing": "None",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "Are you still labbing? (Unselected labs will be deleted)"
                }
            ]
        },
        {
            "type": "Input.ChoiceSet",
            "id": "labIds",
            "style": "expanded",
            "spacing": "Large",
            "isMultiSelect": true,
            "choices": {{ lab_choices }}
        },
        {
            "type": "Input.ChoiceSet",
            "id": "isLabbing",
            "isMultiSelect": false,
            "style": "expanded",
            "spacing": "Large",
            "separator": true,
            "isRequired": true,
            "value": "selection",
            "errorMessage": "Please input a valid response",
            "choices": [
                {
                    "title": "Yes to all",
                    "value": "all"
                },
                {
                    "title": "No to all",
                    "value": "none"
                },
                {
                    "title": "Keep only selected labs",
                    "value": "selection"
                }
            ]
        },
        {
            "type": "ActionSet",
            "style": "positive",
            "horizontalAlignment": "center",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Submit",
                    "id": "Submit",
                    "data": {
                        "type": "labbing",
                        "email": {{ email }},
                        "allLabIds": {{ all_lab_ids }}
                    }
                }
            ]
        }
    ]
}
  
  }]